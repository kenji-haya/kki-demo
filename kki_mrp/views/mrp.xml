<!--                    &lt;!&ndash;                    <field name="order_date" string="納品日" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}" decoration-warning="state not in ('done', 'cancel') and order_date &lt; now" decoration-danger="state not in ('done', 'cancel') and order_date &lt; current_date" decoration-bf="state not in ('done', 'cancel') and (order_date &lt; current_date or order_date &lt; now)" on_change="1" modifiers="{'readonly':[['state','in',['done','cancel']]],'required':true}" id="order_date"/>&ndash;&gt;-->
