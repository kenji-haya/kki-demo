            </field>
        </record>


        <record model="ir.ui.view" id="kki_mrp.list">
            <field name="name">kki_mrp list</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="origin"/>
                    <field name="default_code" readonly="1" optional="show"/>
                    <field name="menu_1" readonly="1" optional="show"/>
                </xpath>

                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="date_planned_start" readonly="1" optional="show" string="手配日"/>
                </xpath>

                <xpath expr="//field[@name='product_qty']" position="after">
                    <field name="arrival_day" readonly="1" optional="show"/>
                </xpath>

                <xpath expr="//field[@name='arrival_day']" position="after">
                    <field name="kcreate_date" readonly="1" optional="show" string="納期日"/>
                </xpath>

                <!--                <xpath expr="//field[@name='name']" position="after">-->
                <!--                    <field name="stock_number" optional="hide" on_change="1" can_create="true" can_write="true"-->
                <!--                           modifiers="{'required':true}"/>-->
                <!--                    <field name="marge_name"/>-->
                <!--                </xpath>-->
            </field>
        </record>


