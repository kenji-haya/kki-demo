<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="kki_mrp.form">
            <field name="name">kki_mrp form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="create_date" string="納品日" attrs="{'invisible':False}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="kki_mrp.list">
            <field name="name">kki_mrp list</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <!--                    <field name="menu_1"  optional="show"/>-->
                    <field name="origin" optional="show"/>
                    <!--                    <field name="default_code" optional="show"/>-->
                    <!--                    <field name="default_code" optional="show"/>-->
                    <!--                    <field name="stock_number"  optional="hide"/>-->
                    <!--                    <field name="brand"  optional="hide"/>-->
                    <!--                    <field name="marge_name"/>-->
                </xpath>
            </field>
        </record>


