<odoo>
    <data>
        <record model="ir.ui.view" id="kki_product_additional_item_brand">
            <field name="name">kki_product_additional_item_brand form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//page[@name='specification']" position="inside">-->
                <xpath expr="//field[@name='material_code']" position="before">

                            <field name="brand"/>

                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="kki_product_additional_item_brand">
            <field name="name">kki_product_additional_item_brand list</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
<!--                    <field name="stock_number"  optional="hide"/>-->
                    <field name="brand"  optional="hide"/>
<!--                    <field name="marge_name"/>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>